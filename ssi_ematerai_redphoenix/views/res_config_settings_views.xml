<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.redphoenux.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="module_redphoenix" widget="upgrade_boolean" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_redphoenix" />
                        <div class="text-muted">
                            Using Redphoenix provider for generate E-Materai.
                        </div>
                        <div
                            class="content-group"
                            attrs="{'invisible': [('module_redphoenix','=',False)]}"
                        >
                            <div class="row mt16">
                                <label
                                    for="static_jwt_token"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="static_jwt_token"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="access_token_expiry"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="access_token_expiry"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label for="client_id" class="col-md-4 o_light_label" />
                                <field name="client_id" class="col-md-8 oe_inline" />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="client_secret"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="client_secret"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label for="rp_login" class="col-md-4 o_light_label" />
                                <field name="rp_login" class="col-md-8 oe_inline" />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_add_document"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_add_document"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_create_order"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_create_order"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_update_param"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_update_param"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_submit_document"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_submit_document"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_generate_sn"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_generate_sn"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_complete_terra"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_complete_terra"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                            <div class="row mt16">
                                <label
                                    for="rp_download_doc"
                                    class="col-md-4 o_light_label"
                                />
                                <field
                                    name="rp_download_doc"
                                    class="col-md-8 oe_inline"
                                />
                            </div>
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>

</odoo>
